@model IEnumerable<TechnicalTest.ViewModel.BookVM>
@{
    ViewBag.Title = "Index";
}

<h2>List of Books</h2>
<p>
    @Html.ActionLink("Create Data","Create", null, new { @class="btn btn-primary"})
</p>
<table class="table table-hover table-responsive">
    <tr>
        <th>
            Book Name
        </th>
        <th>
            Author
        </th>
        <th>
            ReleaseYear
        </th>
        <th>
            Action
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(m => item.Author)
            </td>
            <td>
                @Html.DisplayFor(m => item.ReleaseYear)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BookId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.BookId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>

